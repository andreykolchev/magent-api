<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="fileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.home}/logs/ds-api.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${catalina.home}/logs/ds-api.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>100</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd;HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd;HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.ds" level="info,warn">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="fileAppender"/>
    </logger>

    <logger name="org.springframework" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.github.isrsal.logging.LoggingFilter" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger controlName="org.hibernate.tool.hbm2ddl.SchemaExport" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>


</configuration>
